
from flask import Flask, render_template, jsonify
import main_article 
import threading
import time

app = Flask(__name__)
news_data_fetched = {}  # in-memory cache

def background_fetch():
    global news_data_fetched
    while True:
        try:
            news_data_fetched = main_article.main_fetch()
        except Exception as e:
            print(f"Error fetching news: {e}")
        time.sleep(10)  # 5 minutes

@app.route('/')
def index():
    global news_data_fetched
    news_data = news_data_fetched
    return render_template('index.html', news=news_data)

@app.route('/api/news')
def api_news():
    news_data = main_article.main_fetch
    print(news_data)
    return jsonify(news_data)

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000, debug=True)
    threading.Thread(target=background_fetch, daemon=True).start()
    app.run(debug=True)
